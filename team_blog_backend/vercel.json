{
  "version": 2,
  "builds": [
    {
      "src": "blog_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt",
        "buildCommand": "python manage.py makemigrations --noinput && python manage.py migrate --noinput"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "blog_project/wsgi.py"
    }
  ]
}